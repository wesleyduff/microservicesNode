{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "testcrash"
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "app": "web"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "service-a",
            "image": "testcrash/servicea",
            "imagePullPolicy": "IfNotPresent",
            "ports" : [
              {
                "containerPort": 3000,
                "name": "servicea",
                "protocol": "TCP"
              }
            ]
          },
          {
            "name": "service-b",
            "image": "testcrash/serviceb",
            "imagePullPolicy": "IfNotPresent",
            "ports": [
              {
                "containerPort": 3001,
                "name": "servicea",
                "protocol": "TCP"
              }
            ]
          }
        ],
        "restartPolicy": "OnFailure"
      }
    }
  }
}
