{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "testcrash",
    "labels": {
      "app": "web"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "service-a",
        "image": "crasha",
        "imagePullPolicy": "IfNotPresent",
        "ports" : [
          {
            "containerPort": 3000,
            "name": "service-a",
            "protocol": "TCP"
          }
        ]
      },
      {
        "name": "service-b",
        "image": "crashb",
        "imagePullPolicy": "IfNotPresent",
        "ports" : [
          {
            "containerPort": 3001,
            "name": "crashb",
            "protocol": "TCP"
          }
        ]
      }
    ],
    "restartPolicy": "OnFailure"
  }
}
